mixin testMixin(test)
    .test-item.align-items-center
        .container(style="margin-left: 1%; padding: 0; max-width: 100%;")
            .row.align-items-center(style="margin: 0; padding: 0;")
                .col-md-1.col-3
                    img.img-fluid(src=test.img_url, style="width: 100%; height: auto; border-radius: 5px;")
                .col-md-3.col-3
                    .content-test-name #{test.TenBaithi}
                    - var testDate = new Date(test.ThoiGianBatDau)
                    - var ngay = testDate.getDate()
                    - var thang = testDate.getMonth() + 1 // Lưu ý: getMonth trả về giá trị từ 0 đến 11
                    - var nam = testDate.getFullYear()
                    .content-test-detail Bắt đầu: #{ngay}/#{thang}/#{nam}
                .col-md-5.col-0.d-none.d-md-block
                    .content-test-detail(style="margin-top:15px;") Thể Loại: #{test.TheLoai}
                    br
                    .content-test-detail(style= "margin-top:0px;") Thời Gian: #{test.ThoiGianThi} phút
                .col-md-3.col-4.col-sm-3.text-center
                    a.btn.btn-primary(btn-detail-test-user idTest = test.MaBaiThi style = "width: 130px;font-size: 22px;height:50px;") Vào thi