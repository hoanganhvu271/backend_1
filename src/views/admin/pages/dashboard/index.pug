             i.fa-solid.fa-comment
        .card-dashboard
          div
            .number-dashboard-dashboard 2
            .cardName-dashboard New Account
          .iconBox-dashboard
             i.fa-regular.fa-user


    
    .graphBox
      each box in [1, 2] 
        .box
          canvas(id=box === 1 ? "done" : "visited")

    
